{
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/tomcat-container-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": 8080,
          "protocol": "tcp",
          "containerPort": 8080
        }
      ],
      "cpu": 1024,
      "memory": 256,
      "image": "derby-image",
      "essential": true,
      "name": "derby-app"
    }
  ],
  "requiresCompatibilities": [
      "FARGATE"
   ], 
  "memory": "512",
  "family": "derby-app",
  "networkMode": "awsvpc",
  "cpu": "1024"
}
